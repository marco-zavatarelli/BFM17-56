        p_sd =  0.05,   0.05
        p_pu =  0.6,    0.5
     p_pu_ea =  0.4,    0.3
      p_chro =  0.5,    0.5
      p_chuc =  20.0,   20.0
   p_minfood =  20.0,   20.0
    p_qpcMIZ =  1.85d-3,1.85d-3
    p_qncMIZ =  1.67d-2,1.67d-2
! Food matrix parameters: take care of the notation
