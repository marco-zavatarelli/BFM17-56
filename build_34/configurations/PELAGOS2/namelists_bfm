   sn_trccbc(N3n)  = 'RIVER_DACUNHA-ORCA2_annual' , -12 ,  'RIVERNIT'   ,  .false.  , .true.  , 'yearly'   , ''       , ''
   sn_trccbc(N5s)  = 'RIVER_DACUNHA-ORCA2_annual' , -12 ,  'RIVERSIL'   ,  .false.  , .true.  , 'yearly'   , ''       , ''
   sn_trccbc(N7f)  = 'RIVER_DACUNHA-ORCA2_annual' , -12 ,  'RIVERFe80'  ,  .false.  , .true.  , 'yearly'   , ''       , ''
   sn_trccbc(R1c)  = 'RIVER_DACUNHA-ORCA2_annual' , -12 ,  'RIVERDOC'   ,  .false.  , .true.  , 'yearly'   , ''       , ''
   sn_trccbc(O3c)  = 'RIVER_DACUNHA-ORCA2_annual' , -12 ,  'RIVERDIC'   ,  .false.  , .true.  , 'yearly'   , ''       , ''
   rn_trcfac(N1p)  =  8.8464e+10     ! 1 mol P = 30.97 g; 1.e12*1.e3/30.97/365 conversion factor from Tg/y to mmol/d
   rn_trcfac(N3n)  =  1.9556e+11     ! 1 mol N = 14.01 g; 1.e12*1.e3/14.01/365 conversion factor from Tg/y to mmol/d
   rn_trcfac(N5s)  =  9.7534e+10     ! 1 mol Si = 28.09 g; 1.e12*1.e3/28.09/365 conversion factor from Tg/y to mmol/d
   rn_trcfac(N7f)  =  4.9055e+10     ! 1 mol Fe = 55.85 g; 1.e12*1.e6/55.85/365 conversion factor from Tg/y to umol/d
