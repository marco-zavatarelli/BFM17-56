\begin_inset Formula 
\begin{equation}
\left.\frac{dR_{f}^{(6)}}{dt}\right|_{N^{(5)}}^{rmn}=\Lambda_{f}^{rmn}\,f_{_{R^{(6)}}}^{T}\,R_{f}^{(6)}\label{eq:iron_rmn}
\end{equation}

\end_inset

