# Set options for the Intel Fortran 95 compiler.
ifeq ($(FORTRAN_COMPILER),IFC)
FC=ifc
DEFINES += -DFORTRAN95
can_do_F90=true
F90_to_f90=$(FC) -E $(F90FLAGS) $(EXTRA_FFLAGS) $< > $@
F90_to_f90=
MODULES=
MODULES=-module $(MODDIR)
EXTRAS  = -w95 -e95 -static
DEBUG_FLAGS = -g -C
PROF_FLAGS  = -qp -p
PROD_FLAGS  = -O3
REAL_4B = real\(4\)
EXTRA_LIBS += -lPEPCF90 -lpthread
endif
