# Set options for the NECSX6 Fortran compiler.
ifeq ($(FORTRAN_COMPILER),NECSX6)
FC=${SXF90}
DEFINES += -DNECSX
can_do_F90=true
MODULES=-I $(MODDIR)
EXTRAS	= 
DEBUG_FLAGS = -g 
PROF_FLAGS  = -p -ftrace
PROD_FLAGS  = -R2 -EP -Pstack -sx6 -Chopt -Wf,-P nh -Wf,-pvctl noassume loopcnt=200000 vworksz=4M -Wf,-A idbl4 -Wf,-msg o -Wf,-pvctl fullmsg -Wf,-L fmtlist transform map summary noinclist
REAL_4B	= real\(4\)
endif
