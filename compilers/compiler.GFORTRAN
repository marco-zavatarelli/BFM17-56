# Set options for the GNU Fortran 95 compiler
ifeq ($(FORTRAN_COMPILER),GFORTRAN)
FC=gfortran
DEFINES += -DFORTRAN95 -DGFORTRAN
can_do_F90=true
F90_to_f90=
MODULES=-J $(MODDIR)
EXTRAS = -ffree-form -Wall -std=f95 -pedantic
DEBUG_FLAGS = -g -fbacktrace -ffpe-trap=invalid,zero,overflow,underflow
PROF_FLAGS  = -p
PROD_FLAGS  = -O3 -ftree-vectorize -ftree-vectorizer-verbose=5
REAL_4B = real\(4\)
endif
